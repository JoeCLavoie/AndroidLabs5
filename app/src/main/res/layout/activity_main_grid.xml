<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:padding="16dp"
    android:rowCount="4">

    <!-- Row 1 -->
    <TextView
        android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/I_love_Android"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/flag" />

    <!-- Row 2 -->
    <Switch
        android:id="@+id/switch_onoff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Switch on/off" />

    <!-- Empty space for proper alignment -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="1" />

    <!-- Row 3 -->
    <Button
        android:id="@+id/press_me_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/press_me_btn" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="1"
        android:text="@string/checkbox" />

    <!-- Row 4 -->
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="@string/I_love_Android" />
</GridLayout>
